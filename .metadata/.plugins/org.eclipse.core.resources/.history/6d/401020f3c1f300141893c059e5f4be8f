import java.util.Hashtable;


public class Analyse {

	// Nom du fichier source
	String nom_fichier;
	
	/**
	 * Constructeur d'Analyse
	 */
	public Analyse(String fichier){
		nom_fichier = fichier;
	}
	
	
	public int Charger(){
		
try {
			
			BufferedReader fr = new BufferedReader(new FileReader(
					"C:/Users/Kilian/IUT/Objet/TP2/Ecrire.txt"));
			String fin = "";
			while (fin != null) {
				fin = fr.readLine();
				if (fin != null) {
					System.out.println(fin);
				}
			}
			fr.close();
		} catch (IOException e) {
			System.out.println("Erreur");
		}
	}
	
	
	/**
	 * Fonction static de Hashage
	 * 
	 * @param c : Caractère à analyser
	 * @return place dans l'alphabet de c
	 */
	public static int Hashage(char c){
		int place = (int)c;
		if(place<=122 & place>=97){
			return (place-96);
		}
		return 27;
	}
}
