
public class Analyse {

	// Nom du fichier source
	String nom_fichier;
	
	/**
	 * Constructeur d'Analyse
	 * 
	 * @param fichier : nom du fichier source
	 */
	public Analyse(String fichier){
		nom_fichier = fichier;
	}
	
	/**
	 * Fonction de Hashage
	 * 
	 * @param c : Caractère à analyser
	 * @return place dans l'alphabet de c
	 */
	public int Hashage(char c){
		int place = (int)c;
		if(place<=122 & place>=97){
			return (place-96);
		}
		return 27;
	}
	
}
